include ../secret-field/secret-field.jade

.container#secret-form
  .row(style='padding-top: 2px; padding-bottom: 15px')
    .col-md-12
      span.label.label-default.pull-right(v-if='directMode') Direct mode
      span.label.label-warning.pull-right(v-if='reverseMode') Reverse mode
  .row
    .col-md-12
      form(role='form')
        .form-group
          .input-group.input-group-lg
            input#passphrase.form-control(type='password', placeholder='Passphrase', title='Passphrase', autofocus='', required='', autocomplete='off', tabindex='1')
            span.input-group-btn
              button#showPassphraseButton.btn.btn-default.btn-lg(type='button', tabindex='-1')
                span#passphraseClose.glyphicon.glyphicon-eye-close
                span#passphraseOpen.glyphicon.glyphicon-eye-open(style='display: none;')
        .form-group
          .input-group.input-group-lg
            input#publicKey.form-control(type='text', placeholder='Public key', title='Public key', autocomplete='on', tabindex='2')
            span.input-group-btn
              button#qrcodeButton.btn.btn-default.btn-lg(type='button', tabindex='-1')
                span.glyphicon.glyphicon-qrcode
        .form-group.text-center(title='Mode trigger')
          button#modeButton.btn.btn-default.btn-lg(v-on:click='toggleMode', type='button', tabindex='-1')
            span.glyphicon.glyphicon-sort
        .form-group
          secret-field(v-bind:direct-mode='directMode', v-bind:secret='secret', v-bind:length='secretLength',
                       title='Secret', tab-index='3')
